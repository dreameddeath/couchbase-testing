<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
            http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

    <context:annotation-config />
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <bean id="serviceDiscovererManager" class="org.springframework.web.context.support.ServletContextAttributeFactoryBean">
        <property name="attributeName" value="serviceDiscovererManager" />
    </bean>

    <bean id="couchbaseDaoFactory" class="org.springframework.web.context.support.ServletContextAttributeFactoryBean">
        <property name="attributeName" value="couchbaseDaoFactory" />
    </bean>

    <bean id="testDocDao" factory-bean="couchbaseDaoFactory" factory-method="addDaoForEntity">
        <constructor-arg value="test" />
        <constructor-arg value="testdoc" />
    </bean>

    <bean id="endPoint" class="org.springframework.web.context.support.ServletContextAttributeFactoryBean">
        <property name="attributeName" value="endPointInfo" />
    </bean>

    <bean id="daemonLifeCycle" class="org.springframework.web.context.support.ServletContextAttributeFactoryBean">
        <property name="attributeName" value="daemonLifeCycle" />
    </bean>


    <bean id="serviceRegistrar"
          factory-bean="serviceDiscovererManager"
          factory-method="getServiceRegistrar">
        <constructor-arg type="java.lang.String" value="tests/services" />
    </bean>

    <jaxrs:server id="admin" transportId="http://cxf.apache.org/transports/http" address="/tests" >
        <jaxrs:serviceBeans>
            <bean id="tests" class="com.dreameddeath.infrastructure.daemon.TestRestService" >
                <property name="address" value="/tests"/>
                <property name="endPoint" ref="endPoint"/>
                <property name="serviceRegistrar" ref="serviceRegistrar" />
            </bean>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider">
                <constructor-arg>
                    <bean class="com.dreameddeath.core.service.utils.ServiceJacksonObjectMapper" />
                </constructor-arg>
            </bean>
        </jaxrs:providers>
    </jaxrs:server>
</beans>