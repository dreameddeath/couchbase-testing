<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

    <import resource="classpath:META-INF/spring/webserver.base.applicationContext.xml"/>
    <import resource="classpath:META-INF/spring/webserver.party.couchbase.applicationContext.xml" />
    <import resource="classpath:META-INF/spring/webserver.processes.applicationContext.xml" />


    <bean id="partyManagementService" class="com.dreameddeath.party.service.impl.PartyManagementService" />

    <bean id="createUpdatePartyService" class="com.dreameddeath.party.process.service.CreateUpdatePartyJobProcessingService$CreatePartyTaskProcessingService" />

    <bean id="createUpdatePartyTask" class="com.dreameddeath.core.process.service.ITaskProcessingService"
          factory-bean="processingServiceFactory" factory-method="addTaskProcessingService">
        <constructor-arg>
            <bean class="com.dreameddeath.party.process.service.CreateUpdatePartyJobProcessingService$CreatePartyTaskProcessingService" />
        </constructor-arg>
    </bean>

    <bean id="jobCreatePartyJobProcess" class="com.dreameddeath.core.process.service.IJobProcessingService"
          factory-bean="processingServiceFactory" factory-method="addJobProcessingService">
        <constructor-arg value="com.dreameddeath.party.process.service.CreateUpdatePartyJobProcessingService" />
    </bean>

    <bean id="createUpdatePartyRolesTask" class="com.dreameddeath.core.process.service.ITaskProcessingService"
          factory-bean="processingServiceFactory" factory-method="addTaskProcessingService">
        <constructor-arg>
            <bean class="com.dreameddeath.party.process.service.CreateUpdateRolesJobProcessingService$CreateUpdateRolesTaskProcessingService" />
        </constructor-arg>
    </bean>

    <bean id="jobCreatePartyRolesProcess" class="com.dreameddeath.core.process.service.IJobProcessingService"
          factory-bean="processingServiceFactory" factory-method="addJobProcessingService">
        <constructor-arg value="com.dreameddeath.party.process.service.CreateUpdateRolesJobProcessingService" />
    </bean>

</beans>